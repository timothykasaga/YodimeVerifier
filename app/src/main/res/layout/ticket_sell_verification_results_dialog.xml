<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/primary">
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/ticket_verification_validate_results_ticket_name_text_field_wrapper"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:text="Ticket Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"

                    />
                <TextView
                    android:hint="Ticket Name"
                    android:id="@+id/ticket_verification_validate_results_ticket_name_text_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ticket_verification_validate_results_category_text_field_wrapper"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@+id/ticket_verification_validate_results_ticket_name_text_field_wrapper">
                <TextView
                    android:text="Category:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="2"
                    android:textColor="@color/white"/>
                <TextView
                    android:hint="Category"
                    android:id="@+id/ticket_verification_validate_results_category_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ticket_verification_results_validate_expiry_date_text_field_text_field_wrapper"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@+id/ticket_verification_validate_results_category_text_field_wrapper">
                <TextView
                    android:text="Expiry Date:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="2"
                    android:textColor="@color/white"/>
                <TextView
                    android:hint="Expiry Date"
                    android:id="@+id/ticket_verification_results_validate_expiry_date_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ticket_verification_validate_resultsticket_id_text_field_wrapper"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@+id/ticket_verification_results_validate_expiry_date_text_field_text_field_wrapper">
                <TextView
                    android:text="Ticket ID:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"  android:layout_weight="2"
                    android:textColor="@color/white"/>
                <TextView
                    android:hint="Ticket ID"
                    android:id="@+id/ticket_verification_validate_resultsticket_id_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ticket_verification_results_validate_ticket_status_text_field_wrapper"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@+id/ticket_verification_validate_resultsticket_id_text_field_wrapper">
                <TextView
                    android:text="Ticket status:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"  android:layout_weight="2"
                    android:textColor="@color/white"/>
                <TextView
                    android:hint="Ticket status"
                    android:id="@+id/ticket_verification_results_validate_ticket_status_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:layout_below="@+id/ticket_verification_validate_resultsticket_id_text_field_wrapper"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ticket_verification_validate_results_amount_paid_text_field_field_wrapper"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_below="@+id/ticket_verification_results_validate_ticket_status_text_field_wrapper">

                <TextView
                    android:text="Amount paid:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"  android:layout_weight="2"
                    android:textColor="@color/white"/>
                <TextView
                    android:hint="Amount paid"
                    android:id="@+id/ticket_verification_validate_results_amount_paid_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textColor="@color/white"/>
            </LinearLayout>





        </RelativeLayout>

</LinearLayout>